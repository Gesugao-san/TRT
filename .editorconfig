# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style             = space
end_of_line              = crlf
charset                  = utf-8
trim_trailing_whitespace = false
insert_final_newline     = false

[*.xml]
indent_size = 2
charset     = utf-8-bom

[*.lua]
indent_size = 4
